{
	"compilerOptions": {
		"target": "es2020",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"allowJs": true,
		"declaration": true,
		"outDir": "dist/esm",
		"resolveJsonModule": true,
		"rootDir": "src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
